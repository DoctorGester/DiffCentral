
#Background
{
	flow-children: right;
}

#ImageBackground
{
	width: 100px;
	height: 100%;
	padding: 8px;
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #5f6b69cc ), to( #5f6b6911 ) );
	overflow: noclip;
}

#BonusImage
{
	vertical-align: middle;
	width: 250px;
	height: 250px;
	margin-left: -100px;
	
	//margin-top: -40px;
}

#Contents
{
	padding: 10px 14px;
	background-color: gradient( linear, 0% 0%, 0% 100%, from( #424d4fcc ), to( #424d4f22 ) );
	flow-children: down;
}

#Title
{
	font-size: 20px;
	color: white;
	font-weight: bold;
	text-transform: uppercase;
}

#Description
{
	margin-top: 4px;
	width: 400px;
	color: #8d9892;
}

#BonusTreasure
{
	margin-top: 45px;
	horizontal-align: center;

	background-image: url("s2r://panorama/images/compendium/fall2015_button_1_png.vtex");
	background-size: 100% 100%;
	padding: 8px;
	height: 45px;
	width: 400px;
}

#BonusTreasure Label
{
	margin-top: 1px;
	vertical-align: middle;
	horizontal-align: center;
	text-align: center;
	font-weight: bold;
	text-transform: uppercase;
	color: #ccc5bd;
}


DOTAEventActionCount Label
{
	horizontal-align: center;
	text-align: center;
	font-weight: bold;
	text-transform: uppercase;
	color: #ccc5bd;
	font-size: 16px;
	margin-top: 10px;
}

DOTAEventActionCount
{
    flow-children: right;
}

.TreasureButton:hover:enabled
{
	brightness: 1.5;
}

.TreasureButton:active
{
	brightness: 2.0;
}

#CraftingButton
{
	margin-right: 8px;
}