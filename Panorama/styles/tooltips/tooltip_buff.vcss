/* styles for the Buff tooltip */

.BuffContents
{
    width: 350px;
    flow-children: down;
}

#BuffHeader
{
    flow-children: right;

    border-bottom-color: #626262;
    border-bottom-width: 1px;
    border-bottom-style: solid;
}

#BuffName
{
    font-size: 20px;
    color: white;
    width: fill-parent-flow( 1.0 );
    vertical-align: middle;
}

#BuffLevel
{
    horizontal-align: right;
    margin-left: 8px;
    vertical-align: middle;
}

#BuffDescription
{
    color: #c8c8c8;
    font-size: 16px;
}
