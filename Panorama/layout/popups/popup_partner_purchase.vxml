<root>
	<styles>
    <include src="s2r://panorama/styles/dotastyles.vcss_c" />
    <include src="s2r://panorama/styles/popups/popups_shared.vcss_c" />
    <include src="s2r://panorama/styles/popups/popup_partner_purchase.vcss_c" />
  </styles>

  <PopupPartnerPurchase class="PopupPanel Hidden" defaultfocus="PurchaseButton" popupbackground="dim">
    <Label id="ItemName" class="PopupTitle" />
    <Image id="ItemImage" scaling="stretch-to-cover-preserve-aspect" />
    
    <Panel class="PopupButtonRow">
      <Button id="PurchaseButton" class="PopupButton" onactivate="DOTAPartnerPurchase(true)">
        <Label id="PurchaseButtonLabel" text="#DOTA_PartnerPurchase_Purchase" />
      </Button>
      <Button class="PopupButton" onactivate="DOTAPartnerPurchase(false)">
        <Label text="#Cancel" />
      </Button>
    </Panel>

    <Panel class="PopupButtonRow">
      <Button id="RechargeButton" class="PopupButton" onactivate="DOTAPartnerPurchaseRecharge()">
        <Label text="#DOTA_PartnerPurchase_Recharge" />
      </Button>
    </Panel>

    <Label id="Balance" text="#DOTA_PartnerPurchase_Balance" />
  </PopupPartnerPurchase>
</root>
